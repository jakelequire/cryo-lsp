{
  "name": "cryo-vscode-extension",
  "displayName": "Cryo Language Support",
  "description": "Provides support for the Cryo programming language",
  "version": "0.0.1",
  "publisher": "Jake LeQuire",
  "repository": {
    "type": "git",
    "url": "https://github.com/jakelequire/cryo-lsp"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:cryo"
  ],
  "categories": [
    "Programming Languages"
  ],
  "main": "out/src/extension.js",
  "contributes": {
        "languages": [
            {
                "id": "cryo",
                "aliases": ["Cryo", "cryo"],
                "extensions": [".cryo"],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "cryo",
                "scopeName": "source.cryo",
                "path": "./syntaxes/cryo.tmLanguage.json"
            }
        ],
        "semanticTokenScopes": [
            {
                "scope": "variable.readonly",
                "settings": {
                    "foreground": "#FF0000"
                }
            },
            {
                "scope": "entity.name.function",
                "settings": {
                    "foreground": "#00FF00"
                }
            },
            {
                "scope": "variable.parameter",
                "settings": {
                    "foreground": "#0000FF"
                }
            },
            {
                "scope": "keyword",
                "settings": {
                    "foreground": "#FF00FF"
                }
            },
            {
                "scope": "comment",
                "settings": {
                    "foreground": "#FFFF00"
                }
            },
            {
                "scope": "string",
                "settings": {
                    "foreground": "#00FFFF"
                }
            },
            {
                "scope": "constant.numeric",
                "settings": {
                    "foreground": "#FFA500"
                }
            },
            {
                "scope": "keyword.operator",
                "settings": {
                    "foreground": "#A52A2A"
                }
            }
        ] 
    },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/vscode": "^1.73.0",
    "vscode": "^1.1.37",
    "typescript": "^5.5.2",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-languageclient": "^9.0.1"
  }
}
